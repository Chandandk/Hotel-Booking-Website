<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Metadata and External Links -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <!-- Linking Bootstrap CSS, Font Awesome, and Custom CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
        rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
        crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/732188d8b2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/host_page.css" />
</head>

<body>
    <!-- Include Navigation Bar (assumed to be in a partials file) -->
   
    <!-- /include header -->

    <!-- Main Site Content -->
    <main id="site-main">
        <!-- Container for the main content -->
        <div class="container">
            <!-- Box Navigation Section -->
            <div class="box-nav d-flex justify-between">
                <a href="/adduser" class="border-shadow">
                    <span class="text-danger">Add New User <i class="fas fa-user"></i></span>
                </a>
            </div>
        </div>

        <!-- Table for displaying user data -->
        <table class="table">
            <!-- Check if data2 is available -->
            {{#if data2}}
            <!-- Table Header -->
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Home Name</th>
                    <th>Location</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>

            <!-- Table Body -->
            {{#each data2}}
            <tbody>
                <tr>
                    <td>{{_id}}</td>
                    <td>
                        <img src="{{Homeurl}}" alt="" style="width: 150px; height: 80px" />
                    </td>
                    <td>{{HomeName}}</td>
                    <td>{{Location}}</td>
                    <td>{{Price}}</td>
                    <td>
                        <!-- Edit User and Delete User Links -->
                        <a href="/edit/{{_id}}" class="text-success">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a href="/delete/{{_id}}" class="text-danger">
                            <i class="fa-sharp fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            </tbody>
            {{/each}}
        </table>

        <!-- Display message if no users are found -->
        {{else}}
        <h1 class="text-center text-secondary mt-5">No users found in the database!.</h1>
        {{/if}}
    </main>
    <!-- /Main Site Content -->

    <!-- Include Footer (assumed to be in a partials file) -->
   
    <!-- /include footer -->

    <!-- Bootstrap JS script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>
